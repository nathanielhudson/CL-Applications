<?php
function cehelper_wysiwyg_editor_settings_alter(&$settings, &$context) {
	if($context['profile']->editor == 'ckeditor') {
		$settings['entities'] = false;
		$settings['format_tags'] = 'p;h2;h3;h4;h5;div';
	}
}
